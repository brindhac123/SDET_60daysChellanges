// User function Template for Java

class Solution {
    public static ArrayList<Integer> alternateSort(int[] arr) {
        // Your code goes here
        Arrays.sort(arr);
        ArrayList<Integer> ans=new ArrayList<>();
        int i=0,j=arr.length-1;
        while(i<=j){
            ans.add(arr[j]);
            j--;
            if(i<=j){
                ans.add(arr[i]);
                i++;
            }
        }return ans;
    }
}
