// User function Template for Java

class Solution {
    public static ArrayList<Integer> reverseSubArray(ArrayList<Integer> arr, int l,
                                                     int r) {
        // code here
        int i=l-1;
        int j=r-1;
        
        while(i<j){
            int temp=arr.get(i);
           arr.set(i, arr.get(j));   // use set() to update
            arr.set(j, temp);
            i++;
            j--;
        }
        return arr;
    }
}
