class Solution {
    int firstOccurence(String txt, String pat) {
        // code here
        int l=txt.length();
        int n=pat.length();
        int j;
        for(int i=0;i<=l-n;i++){
            for(j=0;j<n;j++){
                if(txt.charAt(i+j)!=pat.charAt(j))
                break;
            }
            if(n==j)
            return i;
        }
        return -1;
    }
}
