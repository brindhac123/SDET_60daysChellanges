// User function Template for Java

class Solution {
    boolean isDigitSumPalindrome(int n) {
        // code here
        int temp=n,sum=0;
        while(n!=0){
            int mod=n%10;
            sum+=mod;
            n/=10;
        }
        int ori=sum,ans=0;
        while(ori>0){
            int mod=ori%10;
            ans=(ans*10)+mod;
            ori/=10;
        }
        return (sum==ans) ? true:false;
    }
}
