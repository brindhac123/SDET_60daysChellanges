class Solution {
    public ArrayList<Integer> intersection(int arr1[], int arr2[]) {
        // code here
        HashSet<Integer> se=new HashSet<>();
        HashSet<Integer> res=new HashSet<>();
        for(int i: arr1){
            se.add(i);
        }
        for(int i:arr2){
            if(se.contains(i))
            res.add(i);
        }
        
        ArrayList<Integer> ans=new ArrayList<>(res);
        Collections.sort(ans);
        return ans;
    }
}
